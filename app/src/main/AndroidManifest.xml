<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="industries.kyoudai.metrics">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="industries.kyoudai.metrics.AddActivity"
            android:label="Add Metric"
            android:parentActivityName="industries.kyoudai.metrics.MainActivity">
        </activity>
        <activity android:name=".UpdateActivity"
            android:label="Update Metric"
            android:parentActivityName="industries.kyoudai.metrics.MainActivity">
        </activity>
        <activity
            android:name="industries.kyoudai.metrics.MainActivity"
            android:label="Metrics">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>